{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": "always",
    "indentation": 2,
    "string-quotes": "single",
    "no-descending-specificity": null
  },
  "ignoreFiles": ["node_modules/**", "build/**", "dist/**"]
}
